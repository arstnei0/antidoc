{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"noEmit": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"jsx": "preserve",
		"isolatedModules": true,
		"jsxImportSource": "solid-js",
		"baseUrl": ".",
		"paths": {
			"~/*": ["./src/*"],
			"config": ["./src/config"],
			"style": ["./src/style/$.css"],
			"solid": ["./src/lib/solid"]
		},
		"types": [],
		"incremental": true
	},
	"include": ["src"],
	"exclude": ["**/node_modules"]
}
